# InfluxDB Configuration (for Metrics)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=claude-flow-token-123456789
INFLUXDB_ORG=claude-flow
INFLUXDB_BUCKET=game-metrics

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production-must-be-at-least-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=another-super-secret-session-key-change-in-production
CSRF_SECRET=csrf-secret-key-change-in-production

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM="Claude Flow Game <noreply@claude-flow-game.com>"

# Claude Flow Configuration
CLAUDE_FLOW_ENABLED=true
CLAUDE_FLOW_API_URL=http://localhost:3004
CLAUDE_FLOW_MAX_AGENTS=20
CLAUDE_FLOW_DEFAULT_TOPOLOGY=mesh
CLAUDE_FLOW_COORDINATION_STRATEGY=adaptive
CLAUDE_FLOW_MEMORY_SIZE=1000
CLAUDE_FLOW_PATTERN_CACHE_TTL=86400

# Neural Evolution Configuration
NEURAL_EVOLUTION_ENABLED=true
NEURAL_MODELS_PATH=./models
NEURAL_TRAINING_DATA_PATH=./training_data
NEURAL_POPULATION_SIZE=50
NEURAL_MAX_GENERATIONS=100
NEURAL_MUTATION_RATE=0.1
NEURAL_CROSSOVER_RATE=0.8
NEURAL_ELITISM_RATE=0.2
NEURAL_FITNESS_THRESHOLD=0.95

# TensorFlow Configuration
TENSORFLOW_BACKEND=cpu
TENSORFLOW_GPU_ENABLED=false
TENSORFLOW_MEMORY_GROWTH=true
TENSORFLOW_LOG_LEVEL=1

# Self-Improvement Configuration
SELF_IMPROVEMENT_ENABLED=true
SELF_IMPROVEMENT_INTERVAL=86400000
SELF_IMPROVEMENT_PERFORMANCE_THRESHOLD=0.8
SELF_IMPROVEMENT_SAFETY_MODE=true
SELF_IMPROVEMENT_MAX_CONCURRENT=3
SELF_IMPROVEMENT_ROLLBACK_ENABLED=true
SELF_IMPROVEMENT_APPROVAL_REQUIRED=false

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_COLLECTION_INTERVAL=5000
PERFORMANCE_METRICS_RETENTION=2592000
PERFORMANCE_ALERT_THRESHOLD=0.7
PERFORMANCE_BOTTLENECK_DETECTION=true

# Game Configuration
GAME_MAX_PLAYERS_PER_BATTLE=8
GAME_DEFAULT_TIME_LIMIT=600
GAME_MAX_SWARM_AGENTS=20
GAME_NEURAL_PATTERN_LIMIT=10
GAME_ACHIEVEMENT_SYSTEM_ENABLED=true
GAME_LEADERBOARD_UPDATE_INTERVAL=300
GAME_REPLAY_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3003,http://localhost:3000
CORS_CREDENTIALS=true
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/application.log
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5

# Metrics and Analytics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_COLLECTION_ENABLED=true
ANALYTICS_ENABLED=true
TELEMETRY_ENABLED=true

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/json
UPLOAD_DESTINATION=./uploads
UPLOAD_TEMP_DIR=./tmp

# CDN Configuration
CDN_ENABLED=false
CDN_URL=https://cdn.claude-flow-game.com
CDN_ASSETS_PATH=/assets

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt
SSL_CA_PATH=./ssl/ca.crt

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=claude-flow-backups
BACKUP_S3_REGION=us-east-1

# Docker Configuration
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest
DOCKER_HEALTH_CHECK_INTERVAL=30s
DOCKER_HEALTH_CHECK_TIMEOUT=10s
DOCKER_HEALTH_CHECK_RETRIES=3

# Kubernetes Configuration
K8S_NAMESPACE=claude-flow
K8S_REPLICAS=3
K8S_RESOURCE_REQUESTS_CPU=100m
K8S_RESOURCE_REQUESTS_MEMORY=256Mi
K8S_RESOURCE_LIMITS_CPU=500m
K8S_RESOURCE_LIMITS_MEMORY=512Mi

# Development Tools
DEBUG=claude-flow:*
NODEMON_WATCH=src
TYPESCRIPT_CHECK=true
HOT_RELOAD=true
SOURCE_MAPS=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://testuser:testpass@localhost:5433/claude_flow_test
TEST_REDIS_URL=redis://localhost:6380
TEST_PARALLEL_WORKERS=4
TEST_TIMEOUT=30000
TEST_COVERAGE_THRESHOLD=80

# Feature Flags
