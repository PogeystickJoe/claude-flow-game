RABBITMQ_URL=amqp://gamequeue:queuepass123@localhost:5672/%2Fclaude-flow
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=gamequeue
RABBITMQ_PASSWORD=queuepass123
